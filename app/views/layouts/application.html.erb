<!DOCTYPE html>
<html>
  <head>
    <title>TaskAndStudy</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <!--　　ヘッダー　　-->
    <header>
      <div class="title">
        Task & Study
        <% if @current_user %>
          <%= button_to "Logout", session_path, {method: :delete} %>
        <% end %>
      </div>
      <% if @current_user %>
      <nav>
        <ul>
          <% if @current_user %>
            <li><%= @current_user.name %></li>
          <% end %>
          <li>Dashboard</li>
          <li>Task</li>
          <li>learning Record</li>
        </ul>
      </nav>
      <% end %>
    </header>
    <!-- flash -->
    <% if flash[:notice] %>
      <%= flash[:notice] %>
    <% end %>
    <%= yield %>

    <!-- 　フッター　　-->
    <footer>

    </footer>
  </body>
</html>
